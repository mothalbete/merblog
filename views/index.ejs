<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing</title>

    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/landing.css">
</head>

<body>

    <!-- BOTÓN HAMBURGUESA (solo visible en móvil si lo activas en CSS) -->
    <div class="sidebar-toggle" onclick="toggleSidebar()">☰</div>

    <!-- SIDEBAR -->
    <aside class="landing-sidebar">
        <a class="landing-link" onclick="showSection('info')">Información</a>
        <a class="landing-link" onclick="showSection('login')">Iniciar sesión</a>
        <a class="landing-link" onclick="showSection('register')">Registrarse</a>
    </aside>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="landing-main">

        <section id="info" class="landing-section active">
            <%- include('partials/info') %>
        </section>

        <section id="login" class="landing-section">
            <%- include('partials/login') %>
        </section>

        <section id="register" class="landing-section">
            <%- include('partials/register') %>
        </section>

    </main>

    <script>
        function showSection(id) {
            // Ocultar todas las secciones
            document.querySelectorAll('.landing-section')
                .forEach(sec => sec.classList.remove('active'));

            // Mostrar la sección seleccionada
            document.getElementById(id).classList.add('active');

            // Quitar estado activo de todas las pestañas
            document.querySelectorAll('.landing-link')
                .forEach(link => link.classList.remove('active'));

            // Activar la pestaña correspondiente
            document.querySelector(`.landing-link[onclick="showSection('${id}')"]`)
                .classList.add('active');

            // Guardar pestaña activa
            localStorage.setItem("activeTab", id);
        }

        // Cargar pestaña guardada
        window.addEventListener("DOMContentLoaded", () => {
            const savedTab = localStorage.getItem("activeTab") || "info";
            showSection(savedTab);
        });

        // Sidebar móvil
        function toggleSidebar() {
            document.querySelector('.landing-sidebar').classList.toggle('open');
        }
    </script>

</body>

</html>
