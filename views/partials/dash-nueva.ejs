<div class="vapor-card dash-nueva">

    <h2 class="vapor-title">Nueva Publicación</h2>

    <form action="/publicaciones/nueva"
          method="POST"
          enctype="multipart/form-data"
          class="vapor-form">

        <label for="titulo">Título:</label>
        <input type="text" id="titulo" name="titulo" required>

        <label for="contenido">Contenido (texto):</label>
        <textarea id="contenido" name="contenido" required></textarea>

        <label for="imagen">Imagen:</label>
        <input type="file" id="imagen" name="imagen" accept="image/*" required>

        <label for="estado">Estado:</label>
        <select id="estado" name="estado" required class="vapor-select">
            <option value="publicado">Publicado</option>
            <option value="borrador">Borrador</option>
        </select>

        <label for="etiquetas">Etiquetas (separadas por comas):</label>
        <input type="text" id="etiquetas" name="etiquetas" placeholder="playa, verano, viaje">

        <button type="submit" class="btn btn-primary">Publicar</button>

    </form>

</div>
