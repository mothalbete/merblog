<div id="modalPerfil" class="modal-perfil-overlay">

    <div class="modal-perfil-card vapor-card">

        <h3 class="vapor-title">Editar Perfil</h3>

        <form action="/perfil/editar" method="POST" class="vapor-form">

            <label for="nick">Nick:</label>
            <input type="text" id="nick" name="nick" value="<%= user.username %>" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= user.email %>" required>

            <label for="biografia">Biograf√≠a:</label>
            <textarea id="biografia" name="biografia" rows="4"><%= user.biografia || "" %></textarea>

            <div class="modal-buttons">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <button type="button" class="btn btn-ghost" onclick="closePerfilModal()">Cancelar</button>
            </div>

        </form>

    </div>

</div>
