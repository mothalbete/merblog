<div id="modalPerfil" class="modal" style="display:none;
    position:fixed; top:0; left:0; width:100%; height:100%;
    background:rgba(0,0,0,0.6); justify-content:center; align-items:center;">

    <div style="background:white; padding:20px; width:400px; border-radius:8px;">
        <h3>Editar Perfil</h3>

        <form action="/perfil/editar" method="POST">
            <label>Nick:</label>
            <input type="text" name="nick" value="<%= user.username %>" required>

            <br><br>

            <label>Email:</label>
            <input type="email" name="email" value="<%= user.email %>" required>

            <br><br>

            <label>Biograf√≠a:</label>
            <textarea name="biografia" rows="4"><%= user.biografia || "" %></textarea>

            <br><br>

            <button type="submit">Guardar cambios</button>
            <button type="button" onclick="closePerfilModal()">Cancelar</button>
        </form>
    </div>
</div>
