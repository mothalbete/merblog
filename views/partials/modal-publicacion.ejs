<!-- OVERLAY -->
<div id="modal-bg" class="modal-pub-overlay">

    <div id="modal-publicacion" class="modal-pub-card vapor-card">

        <div class="modal-pub-close" onclick="cerrarModal()">‚úñ</div>

        <!-- CONTENEDOR GENERAL (NECESARIO PARA M√ìVIL) -->
        <div class="modal-pub-inner">

            <!-- BLOQUE SUPERIOR (IMAGEN + ACORDE√ìN) -->
            <div class="modal-pub-top">

                <img id="modal-img" src="" alt="Imagen" class="modal-pub-img">

                <div id="modal-actions" class="modal-actions"></div>

                <div class="modal-acordeon" onclick="toggleAcordeon()">
                    Informaci√≥n de la publicaci√≥n ‚ØÜ
                </div>

                <div id="acordeon-contenido" class="modal-acordeon-content">
                    <h2 id="modal-titulo" class="modal-pub-title"></h2>

                    <p id="modal-contenido-texto" class="modal-pub-text"></p>

                    <p class="modal-pub-meta">
                        <strong>Autor:</strong> @<span id="modal-autor"></span>
                    </p>

                    <p class="modal-pub-meta">
                        <strong>Fecha:</strong> <span id="modal-fecha"></span>
                    </p>

                    <p class="modal-pub-meta">
                        <strong>Visitas:</strong> <span id="modal-visitas"></span>
                    </p>

                    <div class="modal-pub-tags">
                        <strong>Etiquetas:</strong>
                        <span id="modal-etiquetas"></span>
                    </div>
                </div>
            </div>

            <!-- BLOQUE INFERIOR (COMENTARIOS + FORMULARIO) -->
            <div class="modal-pub-bottom">

                <h3 class="modal-pub-subtitle">Comentarios</h3>

                <div class="modal-pub-comments-wrapper">
                    <div class="modal-pub-comments" id="modal-comentarios"></div>
                </div>

                <!-- FORMULARIO FIJO EN M√ìVIL -->
                <form id="modal-form" method="POST" class="modal-pub-form vapor-form modal-form-fixed">
                    <textarea name="texto" required class="modal-pub-textarea"></textarea>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>

            </div>

        </div>
    </div>
</div>

<script>
    function abrirModal() {
        document.getElementById("modal-bg").style.display = "flex";
    }

    function cerrarModal() {
        document.getElementById("modal-bg").style.display = "none";
    }

    window.addEventListener("click", function (e) {
        const fondo = document.getElementById("modal-bg");
        if (e.target === fondo) cerrarModal();
    });

    function toggleAcordeon() {
        const cont = document.getElementById("acordeon-contenido");
        cont.classList.toggle("abierto");
    }

    // ============================
    // CARGAR PUBLICACI√ìN
    // ============================
    async function cargarPublicacion(id) {
        const res = await fetch("/publicaciones/" + id);
        const data = await res.json();

        document.getElementById("modal-img").src = data.imagen;
        document.getElementById("modal-titulo").textContent = data.titulo;
        document.getElementById("modal-contenido-texto").textContent = data.contenido;
        document.getElementById("modal-autor").innerHTML =
            `<a class="usuario-link" href="/perfil-publico/${data.id_usuario}">@${data.autor}</a>`;
        document.getElementById("modal-fecha").textContent = new Date(data.fecha).toLocaleString();
        document.getElementById("modal-visitas").textContent = data.visitas;

        let etiquetasHTML = "";
        data.etiquetas.forEach(e => etiquetasHTML += `<span class="tag">#${e}</span>`);
        document.getElementById("modal-etiquetas").innerHTML = etiquetasHTML;

        const contComentarios = document.getElementById("modal-comentarios");

        if (data.comentarios.length === 0) {
            contComentarios.innerHTML = "<p class='no-comments'>No hay comentarios.</p>";
        } else {
            contComentarios.innerHTML = data.comentarios.map(c => `
                <div class="modal-comment">
                    <strong><a class="usuario-link" href="/perfil-publico/${c.id_usuario}">@${c.autor}</a></strong>
                    ${(!c.esAutor && !c.yoSoyEl) ? (
                    c.yoLeSigo
                        ? `<button class="btn-siguiendo-small comentario-siguiendo" data-user="${c.id_usuario}">Siguiendo</button>`
                        : `<button class="btn-seguir-small comentario-seguir" data-user="${c.id_usuario}">Seguir</button>`
                ) : ""}
                    <br>${c.texto}
                </div>
            `).join("");
        }

        document.getElementById("modal-form").action = "/comentarios/" + id;

        const actions = document.getElementById("modal-actions");

        if (data.propietario) {
            actions.innerHTML = `
                <button class="btn-edit-small" onclick="abrirModalEditar(${data.id})">Editar</button>
                <form action="/publicaciones/${data.id}/eliminar" method="POST" style="display:inline-block;" onsubmit="return confirm('¬øSeguro que quieres eliminar esta publicaci√≥n?');">
                    <button type="submit" class="btn-delete-small">Eliminar</button>
                </form>
            `;
        } else {
            actions.innerHTML = data.yoLeSigo
                ? `<button class="btn-siguiendo-small modal-siguiendo" data-user="${data.id_usuario}">Siguiendo</button>`
                : `<button class="btn-seguir-small modal-seguir" data-user="${data.id_usuario}">Seguir</button>`;
        }

        activarBotonesSeguir();
    }

    // ============================
    // SEGUIR / DEJAR DE SEGUIR
    // ============================
    function activarBotonesSeguir() {

        document.querySelectorAll(".modal-seguir, .comentario-seguir").forEach(btn => {
            btn.addEventListener("click", e => {
                e.stopPropagation();
                const id = btn.dataset.user;

                fetch("/seguir/" + id, { method: "POST" })
                    .then(r => r.json())
                    .then(data => {
                        if (data.ok) {
                            btn.classList.remove("btn-seguir-small");
                            btn.classList.add("btn-siguiendo-small");
                            btn.textContent = "Siguiendo";
                        }
                    });
            });
        });

        document.querySelectorAll(".modal-siguiendo, .comentario-siguiendo").forEach(btn => {
            btn.addEventListener("mouseenter", () => btn.textContent = "Dejar de seguir");
            btn.addEventListener("mouseleave", () => btn.textContent = "Siguiendo");

            btn.addEventListener("click", e => {
                e.stopPropagation();
                const id = btn.dataset.user;

                fetch("/dejar-de-seguir/" + id, { method: "POST" })
                    .then(r => r.json())
                    .then(data => {
                        if (data.ok) {
                            btn.classList.remove("btn-siguiendo-small");
                            btn.classList.add("btn-seguir-small");
                            btn.textContent = "Seguir";
                        }
                    });
            });
        });
    }

    
        document.getElementById("modal-form").addEventListener("submit", async function(e) {
            e.preventDefault(); // ‚ùå evita que se cierre el modal

        const form = e.target;
        const action = form.action;
        const texto = form.querySelector("textarea").value;

        const res = await fetch(action, {
            method: "POST",
        headers: {"Content-Type": "application/json" },
        body: JSON.stringify({texto})
    });

        const data = await res.json();

        if (data.ok) {
        // üî• Recargar comentarios sin cerrar el modal
        const id = action.split("/").pop();
        await cargarPublicacion(id);

        // limpiar textarea
        form.querySelector("textarea").value = "";

        // bajar scroll al √∫ltimo comentario
        const cont = document.getElementById("modal-comentarios");
        cont.scrollTop = cont.scrollHeight;
    }
});


</script>